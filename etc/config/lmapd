
config advanced 'advanced'

config quicK_tasks 'quick_tasks'
	list task_names test

config agent 'agent'
	option agent_id 'cb9e3ce7-d0b0-4233-a54d-1ea1e1c7dba0'
	option group_id '42'
	option report_agent_id '1'
	option report_group_id '1'
	option controller_timeout '120'

config actions 'actions'
	list action_names 'action_ping'
	list action_names 'action_tr'

config schedules 'schedules'
	list schedule_names 'demo'

config schedule 'demo'
	option name 'demo'
	option start 'every_minute'
	option execution_mode 'sequential'
	list action 'action_ping'

config schedule 'report_primary'
	option name 'report_primary'
	option start 'every_minute'
	option execution_mode 'parallel'
	list action 'action_report'

config action 'action_ping'
	option name 'action_ping'
	option task 'ping'
	option execution_mode 'sequential'
	option host_name 'google.com'
	list task_options 'count_5'
	list destination 'report_primary'

config action 'action_report'
	option name 'action_report'
	option task 'lmap_reporter'
	option execution_mode 'sequential'
	option report_action '1'

config capabilities 'capabilities'
	list task_names 'ping'
	list task_names 'traceroute'
	list task_names 'lmap_reporter'

config events 'events'
	list event_names 'every_six_hours'
	list event_names 'daily'

config event 'every_six_hours'
	option name 'every_six_hours'
	option random_spread '3600000'
	option event_type '1'
	list month '*'
	list day_of_month '*'
	list day_of_week '*'
	list minute '0'
	list second '0'
	list hour '0'
	list hour '12'
	list hour '18'
	list hour '6'

config event 'daily'
	option name 'daily'
	option event_type '1'
	list month '*'
	list day_of_month '*'
	list day_of_week '*'
	list hour '0'
	list minute '0'
	list second '0'

config task_option 'count_5'
	option id 'count_5'
	option name '-c'
	option value '5'

config task_option 'size_of_packet_64'
	option id 'size_of_packet'
	option name '-s'
	option value '64'

config task_option 'interval_btn_packets_10'
	option id 'interval_btn_packets'
	option name '-i'
	option value '10'

config task_option 'wait_for_5'
	option id 'wait_until'
	option name '-w'
	option value '5'

config task 'ping'
	option name 'ping'
	option program '/bin/ping'
	option version '0.6'
	list task_options 'count'
	list task_options 'size_of_packet_64'
	list task_options 'interval_btn_packets_10'
	list task_options 'wait_for_5'

config task_option 'max_hops'
	option id 'max_hops'
	option name '-m'

config task_option 'numeric'
	option id 'numeric'
	option name '-n'

config task 'traceroute'
	option name 'traceroute'
	option program '/bin/traceroute'
	option version '0.6'
	list task_options 'max_hops'
	list task_options 'numeric'

config task 'lmap_reporter'
	option name 'lmap_reporter'
	option program '/bin/lmap_reporter'
	option version '0.1'

config action 'action_tr'
	option name 'action_tr'
	option task 'traceroute'
	list destination 'report_primary'
	option host_name 'google.com'

config action 'quick_action_test'
	option name 'quick_action_test'
	option task 'ping'
	option destination 'report_primary'

config event 'quick_event_test'
	option name 'quick_event_test'
	option event_type '0'
	option interval '120'

config schedule 'quick_schedule_test'
	option name 'quick_schedule_test'
	option start 'quick_event_test'
